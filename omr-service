#!/bin/bash
# OpenMPTCProuter VPS service script

_multipath() {
	# Force multipath status
	source /etc/shorewall/params.net
	for intf in `ls -1 /sys/class/net`; do
		if [ "$intf" = "$NET_IFACE" ]; then
			multipath $intf on
		else
			multipath $intf off
		fi
	done
}

while true; do
	_multipath
	sleep 10
done
